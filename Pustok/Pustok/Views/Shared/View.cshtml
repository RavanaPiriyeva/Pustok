@*
@model list<book>
<div class="product-slider multiple-row  slider-border-multiple-row  sb-slick-slider"
     data-slick-setting='{
                            "autoplay": true,
                            "autoplayspeed": 8000,
                            "slidestoshow": 5,
                            "rows":1,
                            "dots":true
                        }' data-slick-responsive='[
                            {"breakpoint":1200, "settings": {"slidestoshow": 3} },
                            {"breakpoint":768, "settings": {"slidestoshow": 2} },
                            {"breakpoint":480, "settings": {"slidestoshow": 1} },
                            {"breakpoint":320, "settings": {"slidestoshow": 1} }
                        ]'>
    @foreach (var item in model)
    {
        <div class="single-slide">
            <div class="product-card">
                <div class="product-header">
                    <a href="#" class="author">
                        @item.author.fullname
                    </a>
                    <h3>
                        <a href="product-details.html">
                            @item.name
                        </a>
                    </h3>
                </div>
                <div class="product-card--body">
                    <div class="card-image">
                        <img src="~/uploads/books/@item.bookımages.firstordefault(x=>x.posterstatus==true)?.name" alt="">
                        <div class="hover-contents">
                            <a href="product-details.html" class="hover-image">
                                <img src="~/uploads/books/@item.bookımages.firstordefault(x=>x.posterstatus==false)?.name" alt="">
                            </a>
                            <div class="hover-btns">
                                <a href="cart.html" class="single-btn">
                                    <i class="fas fa-shopping-basket"></i>
                                </a>
                                <a href="wishlist.html" class="single-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="compare.html" class="single-btn">
                                    <i class="fas fa-random"></i>
                                </a>
                                <a href="#" data-toggle="modal" 
                                   class="single-btn show-detail">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="price-block">
                        @if (item.discountpercent > 0)
                        {
                            double discountedprice = item.saleprice * (100 - item.discountpercent) / 100;
                            <span class="price">£@discountedprice</span>
                            <del class="price-old">£@item.saleprice</del>
                            <span class="price-discount">@item.discountpercent%</span>
                        }
                        else
                        {
                            <span class="price">£@item.saleprice</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

</div>*@